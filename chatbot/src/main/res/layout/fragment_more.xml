<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MoreFragment">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="공지 사항"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="문의 사항"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/app_infor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="앱 정보"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_notice"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"

        android:background="@drawable/radious"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:alpha="1"
            android:background="@drawable/underline">

            <TextView
                android:id="@+id/textView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="공지사항"
                android:textSize="25dp" />

            <Button
                android:id="@+id/layout_notice_finish"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView"
                android:layout_alignEnd="@+id/textView"
                android:layout_marginStart="260dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/exit" />

        </RelativeLayout>

        <TextView
            android:id="@+id/notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="TextView"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_questions"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/radious"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:alpha="1"
            android:background="@drawable/underline">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="문의사항"
                android:textSize="25dp" />

            <Button
                android:id="@+id/layout_question_finish"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView6"
                android:layout_alignTop="@+id/textView6"
                android:layout_alignEnd="@+id/textView6"
                android:layout_marginStart="260dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/exit" />

        </RelativeLayout>

        <TextView
            android:id="@+id/mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="cstangga@naver.com"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/layout_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:textSize="17dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_info"
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/radious"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:alpha="1"
            android:background="@drawable/underline">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="false"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="앱 정보"
                android:textSize="25dp" />

            <Button
                android:id="@+id/layout_app_finish"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignStart="@+id/textView5"
                android:layout_alignEnd="@+id/textView5"
                android:layout_marginStart="260dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/exit"
                android:drawableBottom="@drawable/chat_incomming_bubble"
                android:gravity="right"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/app_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="10dp"
            android:text="TextView"
            android:textSize="17dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>